<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryHint="Buscar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/lupaButton"
        android:background="@drawable/rounded_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_lupa"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/searchView"
        app:layout_constraintEnd_toEndOf="@id/searchView"/>


    <TextView
        android:id="@+id/filtersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtros"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/moreFiltersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MÃ¡s Filtros"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/goldenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Golden"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/filtersLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/salchichaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salchicha"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/filtersLabel"
        app:layout_constraintStart_toEndOf="@id/goldenButton"/>

    <Button
        android:id="@+id/terrierButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terrier"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/filtersLabel"
        app:layout_constraintStart_toEndOf="@id/salchichaButton"/>


    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>