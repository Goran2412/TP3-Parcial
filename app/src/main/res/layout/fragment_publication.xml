<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.publication.PublicationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Spinner
            android:id="@+id/dogBreed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:hint="Raza del perro" />

        <Spinner
            android:id="@+id/dogSubBreed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Subraza del perro (si aplica)" />


        <EditText
            android:id="@+id/dogName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del perro" />

        <EditText
            android:id="@+id/dogAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad del perro"
            android:layout_marginBottom="10dp"
            android:inputType="number" />

        <RadioGroup
            android:id="@+id/dogGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Macho" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hembra" />
        </RadioGroup>

        <EditText
            android:id="@+id/dogDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Descripción del perro" />

        <EditText
            android:id="@+id/dogWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso del perro"
            android:layout_marginBottom="20dp"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/dogLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Ubicación del perro" />


        <Button
            android:id="@+id/buttonPublicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publicar"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="100dp"/>

    </LinearLayout>
</ScrollView>